<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cvNews"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_4"
    android:elevation="@dimen/margin_8"
    app:cardCornerRadius="@dimen/margin_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivNews"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginLeft="@dimen/margin_4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_2"
            android:src="@drawable/default_news"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            />

        <TextView
            android:id="@+id/tvSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivNews"
            android:text="source"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_8"
            android:textSize="@dimen/text_regular"
            android:textColor="@color/purple_500" />

        <TextView
            android:id="@+id/lblBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSource"
            android:text="By"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_6"
            android:textSize="@dimen/text_regular"
            android:textColor="@color/col_gray" />

        <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSource"
                android:layout_toRightOf="@id/lblBy"
                android:text="Author"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_6"
                android:textSize="@dimen/text_regular"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAuthor"
                android:layout_margin="@dimen/margin_10"
                android:text="Title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/text_regular_18" />

        <TextView
            android:id="@+id/lblPublishAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_4"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="PublishedAt : "
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_regular" />

        <TextView
            android:id="@+id/tvPublishAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lblPublishAt"
            android:layout_below="@id/tvTitle"
            android:layout_marginTop="@dimen/margin_10"
            android:text="-"
            android:textColor="@color/col_gray"
            android:textSize="@dimen/text_regular" />

        </RelativeLayout>


</androidx.cardview.widget.CardView>